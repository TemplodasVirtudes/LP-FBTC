<script>
  // --- CONFIGURA√á√ïES ---
  // 1. Link do Google Script (O mesmo que usamos no outro form)
  const APPS_SCRIPT_ENDPOINT = "https://script.google.com/macros/s/AKfycbyeY31pXMQA3_FQIUfedAARDrf7zJfAYg61UztU-hhm2cgleXGDCa3StbHmf-cSxiB8dQ/exec";
  
  // 2. P√°gina de Obrigado (Para onde o usu√°rio vai ap√≥s enviar)
  // Adicionamos ?tipo=grade no final
const THANK_YOU_URL = "https://formacaoterapiacapilar.com.br/obrigado-sp-santos-corallo/?tipo=grade";
  
  // 3. (OPCIONAL) Link direto do PDF caso queira for√ßar abertura imediata
  // Mas recomendo colocar o bot√£o de download L√Å na p√°gina de obrigado.
  const GRADE_PDF_URL = ""; 

  // --- L√ìGICA DO MODAL (ABRIR/FECHAR) ---
  const modal = document.getElementById("gradeModal");
  const openBtn = document.getElementById("openGradeModal"); // Bot√£o na se√ß√£o cinza
  const closeBtn = document.getElementById("closeGradeModal"); // O "X" do modal

  // Fun√ß√£o para abrir
  function abrirModalGrade(e) {
    if(e) e.preventDefault();
    modal.classList.add("is-open");
    modal.setAttribute("aria-hidden","false");
    // Trava a rolagem da p√°gina de fundo
    document.body.style.overflow = "hidden";
  }

  // Fun√ß√£o para fechar
  function fecharModalGrade() {
    modal.classList.remove("is-open");
    modal.setAttribute("aria-hidden","true");
    document.body.style.overflow = "";
  }

  // Eventos de Clique
  if(openBtn) openBtn.addEventListener("click", abrirModalGrade);
  if(closeBtn) closeBtn.addEventListener("click", fecharModalGrade);

  // Fecha ao clicar fora (no fundo escuro) ou apertar ESC
  if(modal){
    modal.addEventListener("click", (e)=>{ 
      if(e.target === modal) fecharModalGrade(); 
    });
    document.addEventListener("keydown", (e)=>{ 
      if(e.key === "Escape") fecharModalGrade(); 
    });
  }

  // --- M√ÅSCARA WHATSAPP ---
  const inputWhats = document.getElementById("g_whats");
  if(inputWhats) {
    inputWhats.addEventListener("input", function(e){
      let v = e.target.value.replace(/\D/g,"");
      v = v.replace(/^(\d{2})(\d)/g,"($1) $2");
      v = v.replace(/(\d)(\d{4})$/,"$1-$2");
      e.target.value = v.slice(0, 15); // Limita tamanho
    });
  }

  // --- ENVIO DO FORMUL√ÅRIO ---
  const formGrade = document.getElementById("gradeLeadForm");
  
  if(formGrade){
    formGrade.addEventListener("submit", function(e){
      e.preventDefault();
      
      const btnSubmit = formGrade.querySelector('button[type="submit"]');
      const statusDiv = document.getElementById("gradeStatus");
      const textoOriginal = btnSubmit.innerText;

      // 1. Muda estado do bot√£o
      btnSubmit.innerText = "ENVIANDO...";
      btnSubmit.disabled = true;
      statusDiv.textContent = "Aguarde, processando...";

      // 2. Coleta dados
      const formData = new FormData(formGrade);
      // Adiciona UTMs se existirem na URL
      const urlParams = new URLSearchParams(window.location.search);
      const data = {};
      formData.forEach((value, key) => data[key] = value);
      
      data.utm_source = urlParams.get('utm_source') || "";
      data.utm_medium = urlParams.get('utm_medium') || "";
      data.utm_campaign = urlParams.get('utm_campaign') || "";
      data.page_slug = "Landing_Page_Corallo";
      data.origem_formulario = "Baixar_Grade_Modal"; // Para saber qual form converteu

      // 3. Envia para o Google Sheets
      fetch(APPS_SCRIPT_ENDPOINT, {
        method: "POST",
        mode: "no-cors",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
      })
      .then(() => {
        // SUCESSO!
        statusDiv.textContent = "Sucesso! Redirecionando...";
        
        // (Opcional) Se tiver link do PDF preenchido l√° em cima, tenta abrir
        if(GRADE_PDF_URL) {
           window.open(GRADE_PDF_URL, '_blank');
        }

        // REDIRECIONA PARA OBRIGADO
        setTimeout(() => {
            window.location.href = THANK_YOU_URL;
        }, 500); // Pequeno delay de 0.5s para garantir
      })
      .catch(err => {
        console.error(err);
        statusDiv.textContent = "Erro ao enviar. Tente novamente.";
        btnSubmit.innerText = textoOriginal;
        btnSubmit.disabled = false;
      });
    });
  }
</script>
