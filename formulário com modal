<script>
  // URL do seu Google App Script (Deploy "Web App")
  const APP_SCRIPT_URL = "https://script.google.com/macros/s/AKfycbyeY31pXMQA3_FQIUfedAARDrf7zJfAYg61UztU-hhm2cgleXGDCa3StbHmf-cSxiB8dQ/exec";
  
  // --- AQUI ESTÁ A MUDANÇA ---
  // Atualizado para a Página de Obrigado (em vez do WhatsApp direto)
 // Adicionamos ?tipo=contato no final (ou deixe sem nada)
const THANK_YOU_URL = "https://formacaoterapiacapilar.com.br/obrigado-sp-santos-corallo/?tipo=contato";

  // --- LÓGICA DO MODAL ---
  const modal = document.getElementById('modal-captura');

  // Função para abrir o modal
  function abrirModal() {
    if(modal) modal.classList.add('is-open');
  }
  
  // Função para fechar
  function fecharModal() {
    if(modal) modal.classList.remove('is-open');
  }

  // Fechar ao clicar fora
  if(modal) {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) fecharModal();
    });
  }

  // Conectar botões existentes
  document.addEventListener('DOMContentLoaded', () => {
    const triggers = document.querySelectorAll('.js-open-modal');
    triggers.forEach(btn => btn.addEventListener('click', (e) => {
      e.preventDefault();
      abrirModal();
    }));
  });


  // --- LÓGICA DE ENVIO (FETCH) ---
  const forms = document.querySelectorAll('.fbtc-smart-form');

  forms.forEach(form => {
    form.addEventListener('submit', function(e) {
      e.preventDefault(); // Impede recarregamento da página

      const btn = form.querySelector('button[type="submit"]');
      const originalText = btn.innerText;
      
      // Estado de Carregamento
      btn.innerText = "ENVIANDO...";
      btn.disabled = true;

      // Coleta dados
      const formData = new FormData(form);
      const data = {};
      formData.forEach((value, key) => data[key] = value);

      // Adiciona campos extras
      data.utm_source = getParam('utm_source');
      data.utm_medium = getParam('utm_medium');
      data.utm_campaign = getParam('utm_campaign');
      data.page_slug = "Landing_Page_Corallo";
      data.coordenadora = "Equipe Corallo"; 
      
      const origem = form.getAttribute('data-origem') || "Desconhecido";
      data.utm_content = origem; 

      // ENVIO PARA O GOOGLE SHEETS
      fetch(APP_SCRIPT_URL, {
        method: "POST",
        mode: "no-cors",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(data)
      })
      .then(() => {
        console.log("Enviado com sucesso!");
        
        // --- REDIRECIONAMENTO ACONTECE AQUI ---
        window.location.href = REDIRECT_URL;
      })
      .catch(err => {
        console.error("Erro:", err);
        alert("Erro ao enviar. Por favor, chame no WhatsApp.");
        btn.innerText = originalText;
        btn.disabled = false;
      });
    });
  });

  // --- MÁSCARA WHATSAPP ---
  const inputsWhats = document.querySelectorAll('.mask-whats');
  inputsWhats.forEach(input => {
    input.addEventListener('input', (e) => {
      var x = e.target.value.replace(/\D/g, '').match(/(\d{0,2})(\d{0,5})(\d{0,4})/);
      e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });
  });

  // Helper para pegar UTMs
  function getParam(name) {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get(name) || "";
  }
</script>
